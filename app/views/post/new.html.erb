<h2 class="my-3">Create Post</h2>
<%= form_for(:post, url: posts_new_path(), method: 'post') do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area(:description, size: '50x10') %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.select(:status, Post.statuses.collect { |p| [ p[0], p[0] ] }) %>
  </div>

  <div class="actions my-3">
    <%= f.submit "Create", class: 'btn btn-primary' %>
  </div>
<% end %>
<%= link_to 'Back', posts_path, class: 'text-underline' %>
